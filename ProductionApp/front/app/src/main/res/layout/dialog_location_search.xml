<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_dark_rounded_border_red"
    android:orientation="vertical"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="@drawable/back_dark_rounded_border_red"
            android:fontFamily="@font/montserrat_regular"
            android:hint="Search locations..."
            android:paddingLeft="12dp"
            android:singleLine="true"
            android:textColor="@color/red"
            android:textColorHint="#878787"
            android:textSize="16sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_searchLocations"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="7dp"
            android:layout_weight="0"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/red"
            app:cardCornerRadius="15dp"
            app:contentPadding="6dp">

            <ImageView
                android:id="@+id/iv_searchIcon"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0"
                android:adjustViewBounds="true"
                android:background="@drawable/quantum_ic_search_grey600_24"
                android:backgroundTint="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/btn_location"
                app:layout_constraintEnd_toEndOf="@+id/btn_location"
                app:layout_constraintTop_toTopOf="@+id/btn_location" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_search_text" />

</LinearLayout>