<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@drawable/et_roundedborder"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_ownerAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="0"
            android:adjustViewBounds="true"
            android:src="@drawable/avatarplaceholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ownerUsername"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_medium"
                android:text="Username"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_ownerStatus"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="0"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/userstatusonline"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/tv_ownerStatus"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:alpha="0.75"
                    android:fontFamily="@font/poppins"
                    android:text="Online"
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_postImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:adjustViewBounds="true"
        android:background="@color/red"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="0"
                android:gravity="top"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_likeCount"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="5dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/like" />

                <TextView
                    android:id="@+id/tv_likeCount"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="123.456.789"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_weight="0"
                android:gravity="bottom"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_viewCount"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/view" />

                <TextView
                    android:id="@+id/tv_viewCount"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="123.456.789"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="0"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:focusable="true"
                app:srcCompat="@drawable/like" />

            <ImageView
                android:id="@+id/iv_dislike"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="0"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:focusable="true"
                app:srcCompat="@drawable/dislike"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/iv_follow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="0"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:focusable="true"
                app:srcCompat="@drawable/follow" />

            <ImageView
                android:id="@+id/iv_report"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_weight="0"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:focusable="true"
                app:srcCompat="@drawable/report" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>