<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/follow_item"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:layout_marginBottom="5dp"
    android:background="@color/dark_gray"
    android:clickable="true"
    android:gravity="left|center_vertical"
>

    <ImageView
        android:id="@+id/iv_borderRight"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@color/red" />

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_openProfile"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="10dp"
        android:layout_weight="0"
        android:clickable="false"
        android:focusable="true"
        app:cardCornerRadius="100dp">

        <ImageView
            android:id="@+id/flw_profileImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:clickable="false"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/ll_friendInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:clickable="false"
        android:gravity="left|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/flw_first_and_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/montserrat_regular"
            android:gravity="left|center_vertical"
            android:text="First and last name"
            android:textColor="@color/white"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/flw_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:alpha=".8"
            android:fontFamily="@font/montserrat_regular"
            android:text="username..."
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btn_follow"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginRight="10dp"
        android:text="Follow"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="13dp"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/btn_following"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginRight="10dp"
        android:text="Following"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="13dp"
        android:backgroundTint="#424245"
        android:visibility="gone"
        />


</LinearLayout>