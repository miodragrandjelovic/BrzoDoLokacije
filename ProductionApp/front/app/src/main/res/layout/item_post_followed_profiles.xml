<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_post"
    android:layout_marginLeft="12dp">


    <FrameLayout
        android:id="@+id/fl_post"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:background="@drawable/rounded_post"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/red"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/iv_coverImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/red">
            </ImageView>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:background="@drawable/shadow"
            android:elevation="5dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avatarplaceholder"
            android:elevation="5dp"/>



    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded_red"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fl_post">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="1dp"
            android:gravity="left|center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:background="@drawable/like" />

            <TextView
                android:id="@+id/f_post_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="325,125"
                android:textColor="@color/white"
                android:textSize="10dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:gravity="left|center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="12dp"
                android:layout_height="10dp"

                android:adjustViewBounds="true"
                android:background="@drawable/view"
                android:cropToPadding="false" />

            <TextView
                android:id="@+id/f_post_dislikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="325,125"
                android:textColor="@color/white"
                android:textSize="10dp" />


        </LinearLayout>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>