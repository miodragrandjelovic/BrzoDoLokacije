<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_post_black"
    android:layout_marginLeft="12dp">


    <FrameLayout
        android:id="@+id/fl_post"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:background="@drawable/rounded_post_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0D0D0F"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/iv_coverImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#0D0D0F">
            </ImageView>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="2dp"
            android:background="@drawable/shadow"
            android:elevation="5dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avatarplaceholder"
            android:elevation="5dp"/>



    </FrameLayout>

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="-4dp"
        android:background="@drawable/rounded_post_black"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fl_post">


        <com.example.pyxiskapri.custom_view_models.GradeDisplayView
            android:id="@+id/gradeDisplay_followed"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:elevation="10dp"
            />




    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>